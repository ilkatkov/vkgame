// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  games Game[]
}

enum GameType {
  CARDS
  MATCHCARDS
}

model Game {
  id Int @id @default(autoincrement())

  gameType GameType
  cards    Card[]

  welcomeTitle       String
  welcomeDescription String

  theme   Theme? @relation(fields: [themeId], references: [id])
  themeId Int?

  title       String
  description String

  icon String

  owner   User @relation(fields: [ownerId], references: [id])
  ownerId Int
}

model Card {
  id Int @id @default(autoincrement())

  name        String
  description String
  imageSrc    String

  game   Game @relation(fields: [gameId], references: [id])
  gameId Int
}

model Theme {
  id Int @id @default(autoincrement())

  fill_type         FillType
  bg_color          String
  bg_color_gradient String?
  accent_color      String

  games Game[]
}

enum FillType {
  SOLID
  GRADIENT
}
